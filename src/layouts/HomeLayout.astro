---
import Paralax from "@/components/ui/Paralax.astro";
import "../tailwind/input.css";
import Nav from "@/components/Nav";

interface Props {
  title: string;
  headerTitle?: string;
  image?: {
    href: string;
    alt: string;
  };
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="flex px-3 items-center justify-center bg-main-900/90 w-full fixed z-50">
      <div class="font-bold text-wt-500 text-4xl">LOGO</div>
      <div class="grow"></div>
      <Nav navClassname="h-24 " client:idle />
    </header>
    <Paralax heading="A l'abord d'arbre" anchor="#main" />
    <main class="grow" id="main">
      <slot name="main" />
    </main>
    <footer class="text-wt-500 p-4 w-full bg-main-900">
      <p>&copy; 2024 Astro</p>
    </footer>
  </body>
</html>
