---
import Nav from "../components/Nav";
import "../tailwind/input.css";

interface Props {
  title: string;
  headerTitle: string;
}

const { title, headerTitle } = Astro.props;
const links = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/contact", label: "Contact" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-w-full flex flex-col container justify-start">
    <header class="text-wt-500 p-4 w-full flex flex-col gap-12 bg-element-300">
      <h1>{headerTitle}</h1>
      <Nav links={links} client:load />
    </header>
    <main class="grow">
      <slot name="main" />
    </main>
    <footer class="text-wt-500 p-4 w-full bg-element-300">
      <p>&copy; 2024 Astro</p>
    </footer>
  </body>
</html>
