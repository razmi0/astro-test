---
import CommonHead from "@/components/CommonHead.astro";
import "@/styles/index.css";
import "@/styles/font.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
const { pathname } = Astro.url;
const isHome = pathname === "/";
---

<!doctype html>
<html lang="en">
  <head>
    <CommonHead />
    <title>{Astro.props.title}</title>
  </head>
  <body class="flex flex-col overflow-x-hidden bg-slate-300 dark:bg-slate-800" transition:animate="fade">
    <slot name="header" />
    <slot name="hero" />
    <main class="" class:list={["grow h-full", { "mt-24": !isHome }]}>
      <slot name="main" />
    </main>
    <slot name="footer" />
  </body>
</html>
