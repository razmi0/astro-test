---
import Spacer from "@/components/ui/Spacer.astro";
import Nav from "../components/Nav";
import { ModeToggle } from "../components/ui/ModeToggle";
import Logo from "@/components/ui/Logo.astro";
import Icon from "@/components/icons/Icon.astro";
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, { attributes: true, attributeFilter: ["class"] });
  }
</script>

<style>
  @media (min-width: 768px) {
    header[data-media="desktop"] {
      display: flex;
    }
    header[data-media="mobile"] {
      display: none;
    }
  }

  @media (max-width: 768px) {
    header[data-media="desktop"] {
      display: none;
    }
    header[data-media="mobile"] {
      display: flex;
    }
  }
</style>

<header data-media="desktop" class="flex px-3 items-center justify-center w-full fixed z-50 top-0 left-0" >
  <Logo src="/logo.webp" imgClasses="rounded-full" figureClasses="h-16 w-16 " />
  <Spacer />
  <Nav navClassname="h-24 me-4" client:idle />
  <ModeToggle client:idle />
</header>

<header  data-media="mobile" class="flex px-3 items-center justify-center w-full fixed z-50 top-0 left-0 h-24 me-4">
  <Icon name="menu" />
  <Spacer />
  <Logo src="/logo.webp" imgClasses="rounded-full" figureClasses="h-16 w-16 " />
  <Spacer />
</header>
