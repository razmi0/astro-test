---
import Lorem from "@/components/Lorem.astro";
import Layout from "@/layouts/Layout.astro";
import "../styles/index.css";
import Paralax from "@/components/ui/Paralax.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ScreenUnit from "@/layouts/ScreenUnit.astro";
---

<Layout title="Accueil">
  <Header slot="header" />
  <Paralax slot="paralax" heading="A l'abord d'arbre" anchor="#main" />
  <Fragment slot="main" id="main">
    <ScreenUnit
      id="first-wrapper"
      data-is="first-wrapper"
      className="flex flex-col items-center justify-center"
      title="Presentation"
    >
      <Lorem
        type="text-image"
        img="lorem-vijay.webp"
        text={45}
        articleClass="gap-6 [&>[data-is='card']]:w-[500px]"
        title={{ content: "Vijay Leblanc" }}
        subtitle={{ content: "Cordiste exégète et collectioneur de cordes" }}
      />
      <Lorem
        type="image-text"
        img="lorem-lou.webp"
        text={20}
        articleClass="gap-6 [&>[data-is='card']]:w-[500px]"
        title={{ content: "Lou Bideau" }}
        subtitle={{ content: "Psychologue sur cordage et intellectuelle en bleu" }}
      />
    </ScreenUnit>
    <ScreenUnit id="second-wrapper">
      <Lorem type="card" text={25} />
      <Lorem type="card" text={25} />
    </ScreenUnit>
    <ScreenUnit id="third-wrapper">
      <Lorem type="card" text={25} />
      <Lorem type="card" text={25} />
    </ScreenUnit>
  </Fragment>
  <Footer slot="footer" />
</Layout>

