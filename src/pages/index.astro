---
import Layout from "@/layouts/Layout.astro";
import "../styles/index.css";
import Header from "@/layouts/Header.astro";
import Footer from "@/layouts/Footer.astro";
import ScreenUnit from "@/layouts/ScreenUnit.astro";
import Fondateur from "@/components/Fondateur.astro";
import type { ScreenUnitProps } from "@/layouts/ScreenUnit.astro";
import Hero from "@/components/Hero.astro";

type ScreenUnitType = {
  [key: string]: Omit<ScreenUnitProps, "children"> & { children?: any };
};

const wrappers: ScreenUnitType = {
  fondateur: {
    wrapper: {
      id: "fondateur-wrapper",
      className: "flex flex-col items-start",
      threshold: 0.1,
    },
    title: {
      id: "fondateur-title",
      text: "Les fondateurs",
    },
  },
  histoire: {
    wrapper: {
      id: "histoire-wrapper",
      className: "flex flex-col bg-main-300 dark:bg-main-900 items-start justify-center",
      threshold: 0.1,
    },
    title: {
      id: "histoire-title",
      text: "Notre histoire",
      className: "z-10",
    },
  },
  // presentation: {
  //   wrapper: {
  //     id: "presentation-wrapper",
