---
import Lorem from "@/components/Lorem.astro";
import Layout from "@/layouts/Layout.astro";
import "../styles/index.css";
import Paralax from "@/components/ui/Paralax.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ScreenUnit from "@/layouts/ScreenUnit.astro";
---

<Layout title="Accueil">
  <Header slot="header" />
  <Paralax slot="paralax" heading="A l'abord d'arbre" anchor="#main" />
  <Fragment slot="main" id="main">
    <ScreenUnit id="first-wrapper" className="bg-main-900 flex items-center justify-center">
      <Lorem type="text" text={200} />
    </ScreenUnit>
    <ScreenUnit id="second-wrapper">
      <Lorem type="card" text={25} />
      <Lorem type="card" text={25} />
    </ScreenUnit>
    <ScreenUnit id="third-wrapper">
      <Lorem type="card" text={25} />
      <Lorem type="card" text={25} />
    </ScreenUnit>
  </Fragment>
  <Footer slot="footer" />
</Layout>
