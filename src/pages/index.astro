---
import Layout from "@/layouts/Layout.astro";
import "../styles/index.css";
import Header from "@/layouts/Header.astro";
import Footer from "@/layouts/Footer.astro";
import ScreenUnit from "@/layouts/ScreenUnit.astro";
import type { ScreenUnitProps } from "@/layouts/ScreenUnit.astro";
import Hero from "@/components/Hero.astro";
import Content from "@/components/Content/Content.astro";

type ScreenUnitType = {
  [key: string]: Omit<ScreenUnitProps, "children"> & { children?: any };
};

const wrappers: ScreenUnitType = {
  fondateurHeader: {
    theme: "light",
    wrapper: {
      name: "fondateur",
      className: "flex justify-center items-center",
      threshold: 1,
      size: "quarter",
    },
    title: {
      name: "fondateur",
      text: "Les fondateurs",
      className: "text-main-500 dark:text-main-300",
    },
  },
  fondateurVijay: {
    theme: "light",
    wrapper: {
      className: "flex flex-col items-center justify-center",
      threshold: 0.5,
      size: "half",
    },
  },
  fondateurLou: {
    theme: "light",
    wrapper: {
      className: "flex flex-col items-center justify-center",
      threshold: 0.5,
      size: "half",
    },
  },
  histoireHeader: {
    theme: "dark",
    wrapper: {
      name: "histoire",
      className: "flex justify-center items-center",
      threshold: 1,
      size: "quarter",
    },
    title: {
      name: "histoire",
      text: "Notre histoire",
      className: "text-main-500 dark:text-main-300",
    },
  },
  histoire: {
    theme: "dark",
    wrapper: {
      className: "flex flex-col bg-main-300 dark:bg-main-900 items-start justify-center",
      threshold: 0.5,
    },
  },
};
---

<Layout title="Accueil">
  <Header slot="header" />
  <Hero slot="hero" />
  <Fragment slot="main" id="main">
    <ScreenUnit {...wrappers.fondateurHeader} />
    <ScreenUnit {...wrappers.fondateurVijay}>
      <Content
        type="image-text"
        img="lorem-vijay.webp"
        text={40}
        title={{ content: "Vijay Leblanc" }}
        subtitle={{ content: "Cordiste exégète et collectioneur de cordes" }}
        theme="light"
      />
    </ScreenUnit>
    <ScreenUnit {...wrappers.fondateurLou}>
      <Content
        type="image-text"
        img="lorem-lou.webp"
        text={40}
        title={{ content: "Lou Bideau" }}
        subtitle={{ content: "Psychologue sur cordage et intellectuelle en bleu" }}
        theme="light"
      />
    </ScreenUnit>
    <ScreenUnit {...wrappers.histoireHeader} />
    <ScreenUnit {...wrappers.histoire}>
      <Content
        type="image-text"
        img="vijay-et-lou.webp"
        text={60}
        title={{ content: "L'histoire d'une vie" }}
        subtitle={{ content: "Grandir ensemble" }}
        theme="dark"
      />
    </ScreenUnit>
  </Fragment>
  <Footer slot="footer" />
</Layout>
