  //     threshold: 0.1,
  //   },
  //   title: {
  //     id: "presentation-title",
  //     text: "Pr√©sentation",
  //   },
  // },
};
---

<Layout title="Accueil">
  <Header slot="header" />
  <Hero slot="hero" />
  <Fragment slot="main" id="main">
    <ScreenUnit {...wrappers.fondateur}>
      <Fondateur theme="light" />
    </ScreenUnit>
