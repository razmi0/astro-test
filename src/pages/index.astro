---
import Layout from "@/layouts/Layout.astro";
import Header from "@/layouts/Header.astro";
import Footer from "@/layouts/Footer.astro";
import ScreenUnit from "@/layouts/ScreenUnit.astro";
import Hero from "@/components/Hero.astro";
import Segment from "@/components/Segment/Segment.astro";
import ColorTheme from "@/components/ui/Color/ColorTheme.astro";
import { features, wrappers, imageTextContent } from "@/shared/data";
import SegmentText from "@/components/Segment/SegmentText.astro";
---

<Layout title="Accueil">
  <Header slot="header" />
  <Hero slot="hero" folder="hero" bgName="hero-8" extension="png" />
  <Fragment slot="main" id="main">
    {
      /**
       *
       *
       *
       * Cards Features
       *
       *
       *
       */
    }

    <ColorTheme theme="light">
      <!-- <ScreenUnit {...wrappers.cardsHeaderTitle} /> -->
      <!-- <SegmentText {...cards.subText} /> -->
      <ScreenUnit {...wrappers.cards}>
        {features.map((feature: any, i: number) => <Segment key={i} {...feature} />)}
      </ScreenUnit>
    </ColorTheme>
    {
      /**
       *
       *
       *
       * Hook
       *
       *
       *
       */
    }
    <ColorTheme theme="dark">
      <ScreenUnit {...wrappers.hookHeaderPrimary} />
      <ScreenUnit {...wrappers.hookPrimary}>
        <Segment {...imageTextContent.hookPrimary} />
      </ScreenUnit>
    </ColorTheme>
    <ColorTheme theme="dark">
      <ScreenUnit {...wrappers.hookHeaderSecondary} />
      <ScreenUnit {...wrappers.hookSecondary}>
        <Segment {...imageTextContent.hookSecondary} />
      </ScreenUnit>
    </ColorTheme>

    {
      /**
       *
       *
       *
       * Convince ? CTA
       *
       *
       *
       */
    }
    {
      /**
       *
       *
       *
       *
       *
       * Footer
       */
    }
    <ScreenUnit wrapper={{ size: "full" }} theme="dark" />
    <Footer slot="footer" />
  </Fragment>
</Layout>
