---
import Layout from "@/layouts/Layout.astro";
import "../styles/index.css";
import Header from "@/layouts/Header.astro";
import Footer from "@/layouts/Footer.astro";
import ScreenUnit from "@/layouts/ScreenUnit.astro";
import Hero from "@/components/Hero.astro";
import Content from "@/components/Content/Content.astro";
import type { ScreenUnitProps } from "@/layouts/ScreenUnit.astro";
import type { ContentProps } from "@/components/Content/Content.astro";

type ScreenUnitType = {
  [key: string]: Omit<ScreenUnitProps, "children"> & { children?: any };
};

type ContentType = {
  [key: string]: ContentProps;
};

const wrappers: ScreenUnitType = {
  fondateurHeader: {
    theme: "light",
    wrapper: {
      name: "fondateur",
      threshold: 1,
      size: "quarter",
      className: "pb-0",
    },
    title: {
      name: "fondateur",
      text: "Les fondateurs",
      className: "text-main-500 dark:text-main-300",
      direction: "ltr",
    },
  },
  fondateurVijay: {
    theme: "light",
    wrapper: {
      threshold: 0.5,
      size: "half",
    },
  },
  fondateurLou: {
    theme: "light",
    wrapper: {
      threshold: 0.5,
      size: "half",
    },
  },
  histoireHeader: {
    theme: "dark",
    wrapper: {
      name: "histoire",
      threshold: 1,
      size: "quarter",
      className: "pb-0",
    },
    title: {
      name: "histoire",
      text: "Notre histoire",
      className: "text-main-300 dark:text-main-300",
      direction: "rtl",
    },
  },
  histoire: {
    theme: "dark",
    wrapper: {
      threshold: 0.5,
    },
  },
  valeurHeader: {
    theme: "light",
    wrapper: {
      name: "valeur",
      threshold: 1,
      size: "quarter",
      className: "pb-0",
    },
    title: {
      name: "valeur",
      text: "Nos valeurs",
      className: "text-main-500 dark:text-main-300",
      direction: "rtl",
    },
  },
  valeur: {
    theme: "light",
    wrapper: {
      threshold: 0.5,
    },
  },
};

const content: ContentType = {
  vijay: {
    type: "image-text",
    img: "lorem-vijay.webp",
    text: 40,
    title: { content: "Vijay Leblanc" },
    subtitle: { content: "Cordiste exégète et collectioneur de cordes" },
    theme: "light",
  },
  lou: {
    type: "image-text",
    img: "lorem-lou.webp",
    text: 40,
    title: { content: "Lou Bideau" },
    subtitle: { content: "Psychologue sur cordage et intellectuelle en bleu" },
    theme: "light",
  },
  histoire: {
    type: "image-text",
    img: "vijay-et-lou.webp",
    text: 60,
    title: { content: "L'histoire d'une vie" },
    subtitle: { content: "Grandir ensemble" },
    theme: "dark",
  },
  valeur: {
    type: "card",
    img: "lorem-lou.webp",
    text: 40,
    title: { content: "Lou Bideau" },
    subtitle: { content: "Psychologue sur cordage et intellectuelle en bleu" },
    theme: "light",
  },
};
---

<Layout title="Accueil">
  <Header slot="header" />
  <Hero slot="hero" />
  <Fragment slot="main" id="main">
    <ScreenUnit {...wrappers.fondateurHeader} />
    <ScreenUnit {...wrappers.fondateurVijay}>
      <Content {...content.vijay} />
    </ScreenUnit>
    <ScreenUnit {...wrappers.fondateurLou}>
      <Content {...content.lou} />
    </ScreenUnit>
    <ScreenUnit {...wrappers.histoireHeader} />
    <ScreenUnit {...wrappers.histoire}>
      <Content {...content.histoire} />
    </ScreenUnit>
    <ScreenUnit {...wrappers.valeurHeader} />
    <ScreenUnit {...wrappers.valeur}>
      <Content {...content.valeur} />
    </ScreenUnit>
  </Fragment>
  <Footer slot="footer" />
</Layout>
