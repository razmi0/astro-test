---
import Lorem from "@/components/Lorem.astro";
import Layout from "@/layouts/Layout.astro";
import "../styles/index.css";
import Paralax from "@/components/ui/Paralax.astro";
import Header from "@/layouts/Header.astro";
import Footer from "@/layouts/Footer.astro";
import ScreenUnit from "@/layouts/ScreenUnit.astro";
import Fondateur from "@/components/Fondateur.astro";
---

<Layout title="Accueil">
  <Header slot="header" />
  <Paralax slot="paralax" heading="A l'abord d'arbre" />
  <Fragment slot="main" id="main">
    <ScreenUnit
      idWrapper="first-wrapper"
      idTitle="first-title"
      className="flex flex-col items-start gap-12"
      title="Les fondateurs"
      threshold={0.4}
    >
      <Fondateur />
    </ScreenUnit>
    <ScreenUnit
      idWrapper="second-wrapper"
      idTitle="second-title"
      title="Notre histoire"
      className=" flex flex-col bg-main-300 justify-center items-start"
      threshold={0.2}
    >
      <Lorem
        type="text-image"
        img="vijay-et-lou.webp"
        text={120}
        articleClass="gap-12 [&>[data-is='card']]:w-[500px]"
        title={{ content: "L'histoire d'une vie" }}
        subtitle={{ content: "Grandir ensemble" }}
      />
    </ScreenUnit>
    <ScreenUnit idWrapper="third-wrapper" idTitle="thirdTitle" title="NEXT">
      <Lorem type="card" text={25} />
      <Lorem type="card" text={25} />
    </ScreenUnit>
  </Fragment>
  <Footer slot="footer" />
</Layout>

