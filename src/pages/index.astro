---
import Lorem from "@/components/Lorem.astro";
import Layout from "@/layouts/Layout.astro";
import "../styles/index.css";
import Paralax from "@/components/ui/Paralax.astro";
import Header from "@/layouts/Header.astro";
import Footer from "@/layouts/Footer.astro";
import ScreenUnit from "@/layouts/ScreenUnit.astro";
import Fondateur from "@/components/Fondateur.astro";
import type { ScreenUnitProps } from "@/layouts/ScreenUnit.astro";

type ScreenUnitType = {
  [key: string]: Omit<ScreenUnitProps, "children"> & { children?: any };
};

const wrappers: ScreenUnitType = {
  first: {
    wrapper: {
      id: "first-wrapper",
      className: "flex flex-col items-start gap-12",
      threshold: 0.4,
    },
    title: {
      id: "first-title",
      text: "Les fondateurs",
    },
  },
  second: {
    wrapper: {
      id: "second-wrapper",
      className: "flex flex-col bg-main-300 items-start gap-12",
      threshold: 0.2,
    },
    title: {
      id: "second-title",
      text: "Notre histoire",
      startingPos: "-20vh",
      endingPos: "90px",
      className: "z-10",
    },
  },
};
---

<Layout title="Accueil">
  <Header slot="header" />
  <Paralax slot="paralax" heading="A l'abord d'arbre" />
  <Fragment slot="main" id="main">
    <ScreenUnit {...wrappers.first}>
      <Fondateur />
    </ScreenUnit>
    <ScreenUnit {...wrappers.second}>
      <Lorem
        type="text-image"
        img="vijay-et-lou.webp"
        text={120}
        articleClass="gap-12 [&>[data-is='card']]:w-[500px]"
        title={{ content: "L'histoire d'une vie" }}
        subtitle={{ content: "Grandir ensemble" }}
      />
    </ScreenUnit>
  </Fragment>
  <Footer slot="footer" />
</Layout>
