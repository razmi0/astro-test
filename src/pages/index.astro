---
import Lorem from "@/components/ui/Lorem/Lorem.astro";
import Layout from "@/layouts/Layout.astro";
import "../styles/index.css";
import Paralax from "@/components/ui/Paralax.astro";
import Header from "@/layouts/Header.astro";
import Footer from "@/layouts/Footer.astro";
import ScreenUnit from "@/layouts/ScreenUnit.astro";
import Fondateur from "@/components/Fondateur.astro";
import type { ScreenUnitProps } from "@/layouts/ScreenUnit.astro";
import Histoire from "@/components/Histoire.astro";

type ScreenUnitType = {
  [key: string]: Omit<ScreenUnitProps, "children"> & { children?: any };
};

const wrappers: ScreenUnitType = {
  fondateur: {
    wrapper: {
      id: "fondateur-wrapper",
      className: "flex flex-col items-start gap-12",
      threshold: 0.4,
    },
    title: {
      id: "fondateur-title",
      text: "Les fondateurs",
    },
  },
  histoire: {
    wrapper: {
      id: "histoire-wrapper",
      className: "flex flex-col bg-main-300 items-start gap-12",
      threshold: 0.2,
    },
    title: {
      id: "histoire-title",
      text: "Notre histoire",
      className: "z-10",
    },
  },
  presentation: {
    wrapper: {
      id: "presentation-wrapper",
      className: "flex flex-col items-start gap-12",
      threshold: 0.2,
    },
    title: {
      id: "presentation-title",
      text: "Pr√©sentation",
    },
  },
};
---

<Layout title="Accueil">
  <Header slot="header" />
  <Paralax slot="paralax" heading="A l'abord d'arbre" />
  <Fragment slot="main" id="main">
    <ScreenUnit {...wrappers.fondateur}>
      <Fondateur />
    </ScreenUnit>
    <ScreenUnit {...wrappers.histoire}>
      <Histoire />
    </ScreenUnit>
  </Fragment>
  <Footer slot="footer" />
</Layout>
