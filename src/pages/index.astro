---
import Layout from "@/layouts/Layout.astro";
import Header from "@/layouts/Header.astro";
import Footer from "@/layouts/Footer.astro";
import ScreenUnit from "@/layouts/ScreenUnit.astro";
import Hero from "@/components/Hero.astro";
import Segment from "@/components/Segment/Segment.astro";
import ColorTheme from "@/components/ui/Color/ColorTheme.astro";
import { presentation, wrappers, imageTextContent } from "@/shared/data";
import SegmentText from "@/components/Segment/SegmentText.astro";
---

<Layout title="Accueil">
  <Header slot="header" />
  <Hero slot="hero" />
  <Fragment slot="main" id="main">
    {
      /**
       *
       *
       *
       * Presentation
       *
       *
       *
       */
    }

    <ColorTheme theme="light" curve>
      <ScreenUnit {...wrappers.presentationHeaderTitle} />
      <SegmentText {...presentation.subText} />
      <ScreenUnit {...wrappers.presentation}>
        <Segment {...presentation[1]} />
        <Segment {...presentation[2]} />
        <Segment {...presentation[3]} />
        <Segment {...presentation[4]} />
      </ScreenUnit>
    </ColorTheme>
    {
      /**
       *
       *
       *
       * Hook
       *
       *
       *
       */
    }
    <ColorTheme theme="dark" curve>
      <ScreenUnit {...wrappers.hookHeaderPrimary} />
      <ScreenUnit {...wrappers.hookPrimary}>
        <Segment {...imageTextContent.hookPrimaryTop} />
        <Segment {...imageTextContent.hookPrimaryBot} />
      </ScreenUnit>
    </ColorTheme>
    <ColorTheme theme="dark" curve rotate="180deg">
      <ScreenUnit {...wrappers.hookHeaderSecondary} />
      <ScreenUnit {...wrappers.hookSecondary}>
        <Segment {...imageTextContent.hookSecondaryTop} />
        <Segment {...imageTextContent.hookSecondaryBot} />
      </ScreenUnit>
    </ColorTheme>

    {
      /**
       *
       *
       *
       * Convince ? CTA
       *
       *
       *
       */
    }
    {
      /**
       *
       *
       *
       *
       *
       * Footer
       */
    }
    <ScreenUnit wrapper={{ size: "full" }} theme="dark" />
    <Footer slot="footer" />
  </Fragment>
</Layout>
