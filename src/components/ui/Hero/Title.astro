---
import FirstLetter from "./svg/first-letter.svg?raw";
import LastWord from "./svg/last-word.svg?raw";
import MiddleWord from "./svg/middle-word.svg?raw";
---

<style is:inline>
  /**           **/
  /** SVG Title **/
  /**  letter A **/
  /**           **/
  .svg-title-container {
    --delay-stroke-slow: 1.4s;
    --delay-stroke-medium: 1s;
    --delay-stroke-fast: 0.5s;

    --delay-fill-slow: calc(var(--delay-stroke-slow) + 1.2s);
    --delay-fill-medium: calc(var(--delay-stroke-medium) + 1.1s);
    --delay-fill-fast: calc(var(--delay-stroke-fast) + 1s);
  }

  .svg-title-first-letter {
    animation:
      animate-svg-stroke-1 1.2s cubic-bezier(0.445, 0.05, 0.55, 0.95) var(--delay-stroke-fast) both,
      animate-svg-fill-1 0.7s cubic-bezier(0.785, 0.135, 0.15, 0.86) var(--delay-fill-fast) both;
  }

  @keyframes animate-svg-stroke-1 {
    0% {
      /** .24754333496094 **/
      stroke-dashoffset: 257px;
      stroke-dasharray: 257px;
    }

    100% {
      /** .24754333496094 **/
      stroke-dashoffset: 0;
      stroke-dasharray: 257px;
    }
  }

  @keyframes animate-svg-fill-1 {
    0% {
      fill: transparent;
    }

    100% {
      fill: white;
    }
  }

  /**                 **/
  /**    SVG Title    **/
  /**  middle letter  **/
  /**                 **/

  .svg-title-middle-word {
    animation:
      animate-svg-stroke-2 1.2s cubic-bezier(0.445, 0.05, 0.55, 0.95) var(--delay-stroke-medium) both,
      animate-svg-fill-middle-word 0.7s cubic-bezier(0.785, 0.135, 0.15, 0.86) var(--delay-fill-medium) both;
  }

  @keyframes animate-svg-stroke-2 {
    0% {
      /** .42919921875 **/
      stroke-dashoffset: 1348px;
      stroke-dasharray: 1348px;
    }

    100% {
      stroke-dashoffset: 0;
      stroke-dasharray: 1348px;
    }
  }

  @keyframes animate-svg-fill-middle-word {
    0% {
      fill: transparent;
    }

    100% {
      fill: #7b8ec3;
    }
  }

  /**                 **/
  /**    SVG Title    **/
  /**    last word    **/
  /**                 **/

  .svg-title-last-word {
    animation:
      animate-svg-stroke-3 1.2s cubic-bezier(0.445, 0.05, 0.55, 0.95) var(--delay-stroke-slow) both,
      animate-svg-fill-last-word 0.7s cubic-bezier(0.785, 0.135, 0.15, 0.86) var(--delay-fill-slow) both;
  }

  @keyframes animate-svg-stroke-3 {
    0% {
      /** .4322509765625 **/
      stroke-dashoffset: 1040px;
      stroke-dasharray: 1040px;
    }

    100% {
      stroke-dashoffset: 0;
      stroke-dasharray: 1040px;
    }
  }

  @keyframes animate-svg-fill-last-word {
    0% {
      fill: transparent;
    }

    100% {
      fill: white;
    }
  }
</style>

<div class="gap-3 flex-wrap horizontal center svg-title-container">
  <h1 class="sr-only">A l'abord d'arbre</h1>
  <Fragment set:html={FirstLetter} />
  <Fragment set:html={MiddleWord} />
  <Fragment set:html={LastWord} />
</div>
