---
import type { HTMLAttributes } from "astro/types";
interface Props {
  size?: number;
  color?: string;
  direction?: "up" | "down" | "left" | "right";
  props?: Omit<HTMLAttributes<"svg">, "width" | "height" | "color" | "direction">;
}

const { color = "currentcolor", size = 24, direction = "up" } = Astro.props;

const directions = {
  up: 0,
  down: 180,
  left: 90,
  right: 270,
};
---

<svg
  width={size + "px"}
  height={size + "px"}
  viewBox="0 0 24 24"
  fill="none"
  transform={`rotate(${directions[direction]})`}
  ><g>
    <path
      d="M13 8 9 12M9 12 13 16M9 12H21M19.4845 7C17.8699 4.588 15.1204 3 12 3 7.0294 3 3 7.0294 3 12 3 16.9706 7.0294 21 12 21 15.1204 21 17.8699 19.412 19.4845 17"
      stroke={color}
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
    </path>
  </g>
</svg>
